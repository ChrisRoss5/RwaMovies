@model int

<td class="d-flex flex-wrap gap-1 justify-content-end">
    <a asp-action="Details" asp-route-id="@Model" class="btn btn-secondary">Details</a>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model" class="btn btn-danger">Delete</a>
    }
</td>